<!-- res/layout/fragment_skills.xml -->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navyblue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- C++ Skills Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:paddingTop="16dp"
                app:cardCornerRadius="16dp"
                android:backgroundTint="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/cpp"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="C++"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/sfmed"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="C++ is a versatile, high-performance programming language, combining features of C and object-oriented programming, widely used for system software and application development."
                        android:textSize="16sp"
                        android:textColor="#777777"
                        android:gravity="start"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/sfmed"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="start|center_vertical"
                        android:paddingTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Proficiency:"
                            android:textSize="16sp"
                            android:textColor="#777777"
                            android:gravity="start"
                            android:fontFamily="@font/sfmed"/>

                        <RatingBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:stepSize="1"
                            android:rating="3"
                            android:layout_marginStart="8dp"
                            style="?android:attr/ratingBarStyleSmall"
                            android:progressTint="#FFD700" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Learn in subject: CSC126 (Fundamentals of Algorithm and Computer Problem)"
                        android:textSize="16sp"
                        android:textColor="#777777"
                        android:gravity="start"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/sfmed"
                        android:paddingTop="10dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- VB Development Skills Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                app:cardCornerRadius="16dp"
                android:backgroundTint="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/vb"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VB.Net"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/sfmed"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VB.NET is a modern, object-oriented programming language, part of the .NET framework, designed for ease of development, with a focus on Windows applications and web services."
                        android:textSize="16sp"
                        android:textColor="#777777"
                        android:gravity="start"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/sfmed"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="start|center_vertical"
                        android:paddingTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Proficiency:"
                            android:textSize="16sp"
                            android:textColor="#777777"
                            android:gravity="start"
                            android:fontFamily="@font/sfmed"/>

                        <RatingBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:stepSize="1"
                            android:rating="4"
                            android:layout_marginStart="8dp"
                            style="?android:attr/ratingBarStyleSmall"
                            android:progressTint="#FFD700" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Learn in subject: CSC301 (Visual Programming)"
                        android:textSize="16sp"
                        android:textColor="#777777"
                        android:gravity="start"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/sfmed"
                        android:paddingTop="10dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!--HTML Development Skills Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                app:cardCornerRadius="16dp"
                android:backgroundTint="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/html"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HTML"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/sfmed"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HTML (Hypertext Markup Language) is a standard for creating web pages, defining structure and content elements using tags, facilitating the presentation of information on the internet."
                        android:textSize="16sp"
                        android:textColor="#777777"
                        android:gravity="start"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/sfmed"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="start|center_vertical"
                        android:paddingTop="10dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Proficiency:"
                            android:textSize="16sp"
                            android:textColor="#777777"
                            android:gravity="start"
                            android:fontFamily="@font/sfmed" />

                        <RatingBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:stepSize="1"
                            android:rating="4"
                            android:layout_marginStart="8dp"
                            style="?android:attr/ratingBarStyleSmall"
                            android:progressTint="#FFD700" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Learn in subject: CSC264 (Introduction to Web Application)"
                        android:textSize="16sp"
                        android:textColor="#777777"
                        android:gravity="start"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/sfmed"
                        android:paddingTop="10dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!--Java-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                android:backgroundTint="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/java"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Java"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/sfmed"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Java, renowned for platform independence, is a versatile, object-oriented language pivotal in crafting applications spanning mobile to enterprise domains."
                        android:textSize="16sp"
                        android:textColor="#777777"
                        android:gravity="start"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/sfmed"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="start|center_vertical"
                        android:paddingTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Proficiency:"
                            android:textSize="16sp"
                            android:textColor="#777777"
                            android:gravity="start"
                            android:fontFamily="@font/sfmed"/>

                        <RatingBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:stepSize="1"
                            android:rating="2"
                            android:layout_marginStart="8dp"
                            style="?android:attr/ratingBarStyleSmall"
                            android:progressTint="#FFD700" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Learn in subject: CSC186 (Introduction to Object Oriented Programming)"
                        android:textSize="16sp"
                        android:textColor="#777777"
                        android:gravity="start"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/sfmed"
                        android:paddingTop="10dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!--Social Media links-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="16dp"
                android:paddingBottom="4dp"
                android:text="Get in touch" />

            <!-- Social media links -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="16dp"
                android:layout_gravity="center">


                <ImageView
                    android:id="@+id/instagramImageView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/instagram"
                    android:clickable="true"
                    android:onClick="openInstagramLink"/>

                <ImageView
                    android:id="@+id/linkedinImageView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="8dp"
                    android:layout_gravity="center"
                    android:src="@drawable/linkedin"
                    android:clickable="true"
                    android:onClick="openLinkedInLink"/>

                <ImageView
                    android:id="@+id/facebookImageView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"

                    android:src="@drawable/facebook"
                    android:clickable="true"
                    android:onClick="openFacebookLink"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
